
{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "lib": [
            "es2017"
        ],
        "declaration": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "strictNullChecks": false,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "watch": true
    },
    "include": [
        "src/**/*"
    ]
}